extends layout

block content
  h1= title
  - let results = [{"carName": "jaguar", "carcolor": "red", "carcount": 12}, {"carName": "Lamborghini", "carcolor": "yellow", "carcount": 14}, {"carName": "defender SUV", "carcolor": "white", "carcount": 15}]

  div(class= "container-fluid")
    div(class = "row")  
      each item,index in results
        div(class= "col-sm-2", onclick=`buy(${index})`) car name: &nbsp; #{item.carName} car color: &nbsp; #{item.carcolor} car count:  &nbsp; #{item.carcount}

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }